<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_widget_background"
        android:theme="@style/Theme.AppWidget.AppWidgetContainer">

        <ImageButton
            android:id="@+id/somfy_stop"
            android:layout_width="60dp"
            android:background="#00000000"
            android:layout_height="33dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_round_remove_24"/>

        <ImageButton
            android:background="#00000000"
            android:id="@+id/somfy_down"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:layout_below="@id/somfy_stop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_round_expand_more_24"/>

        <ImageButton
            android:background="#00000000"
            android:id="@+id/somfy_up"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:layout_above="@id/somfy_stop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_round_expand_less_24"/>

    </RelativeLayout>

</RelativeLayout>